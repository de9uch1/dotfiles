#!/bin/sh

CARGO_PKGS="
    cargo-update
    cargo-edit
    rust-script
    bandwhich
    bat
    bingrep
    csview
    fd-find
    hexyl
    hyperfine
    procs
    pastel
    ripgrep
    lsd
    git-delta
    skim
    du-dust
    choose
    sd
    pueue
"
CARGO_LOCKED_PKGS="
    starship
    difftastic
"

if command -v rustup; then
    rustup self update
    rustup component add rustfmt clippy rust-analyzer rust-src
    rustup update
fi

if command -v cargo; then
    cargo install $CARGO_PKGS
    cargo install --locked $CARGO_LOCKED_PKGS
    cargo install-update -a
fi

if command -v go; then
    go install github.com/x-motemen/ghq@latest
    go install github.com/junegunn/fzf@latest
    go install mvdan.cc/sh/v3/cmd/shfmt@latest
fi

if command -v uv > /dev/null; then
    if ! command -v trash > /dev/null; then
        uv tool install trash-cli
    fi
    if ! command -v basedpyright > /dev/null; then
        uv tool install basedpyright
    fi
    if ! command -v pyrefly > /dev/null; then
        uv tool install pyrefly
    fi
    if ! command -v ty > /dev/null; then
        uv tool install ty
    fi
    if ! command -v ruff > /dev/null; then
        uv tool install ruff
    fi
    if ! command -v pip > /dev/null; then
        uv tool install pip
    fi
    uv tool upgrade --all
fi

mkdir -p $HOME/.local/bin/
curl \
    -sL \
    -o $HOME/.local/bin/git-rsync \
    https://raw.githubusercontent.com/de9uch1/git-rsync/master/git-rsync
chmod +x $HOME/.local/bin/git-rsync
curl -sfL https://direnv.net/install.sh | env bin_path=$HOME/.local/bin bash
