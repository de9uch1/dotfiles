#!/usr/bin/env bash

function help() {
    cat << __EOT__ >&2
Usage: $(basename $0) TARGET ENV

TARGET           ENV
-----------------------------------
shell            bash, fish
prefix           gentoo, brew, none
__EOT__
}

function parse_args() {
    case $1 in
        shell)
            TARGET=shell
            ;;
        prefix)
            TARGET=prefix
            ;;
        *)
            help
            exit 1
    esac

    if [[ $TARGET = shell ]]; then
        case $2 in
            bash)
                ENV=bash
                ;;
            fish)
                ENV=fish
                ;;
            *)
                help
                exit 1
        esac
    elif [[ $TARGET = prefix ]]; then
        case $2 in
            gentoo)
                ENV=gentoo
                ;;
            brew)
                ENV=brew
                ;;
            none)
                ENV=none
                ;;
            *)
                help
                exit 1
        esac
    fi
}

function _shell() {
    echo "Switching to $1..."
    env INTR_SHELL=$1 bash -li
}

function _prefix() {
    echo "Switching to $1..."
    env -i \
        $RETAIN \
        PREFIX_SYSTEM=$1 \
        bash -li
}

function append_retain() {
    local val="$(eval echo \$$1)"
    [[ -n $val ]] && RETAIN+=" $1=$val"
}

function main() {
    parse_args $@

    RETAIN="HOME=$HOME TERM=$TERM USER=$USER"
    append_retain SSH_AUTH_SOCK
    append_retain DISPLAY
    append_retain PREFIX_SYSTEM
    append_retain INTR_SHELL

    _$TARGET $ENV
}

main $@
